server {
    listen       <%= @port %>;
    server_name <%= @serverName %>;
    root         /usr/share/nginx/html;
      include /etc/nginx/default.d/*.conf;

      location / {
        root <%= @documentRoot %>;
      }

      <%= @locations %>

      error_page 404 /404.html;
          location = /40x.html {
      }

      error_page 500 502 503 504 /50x.html;
          location = /50x.html {
      }
  }
